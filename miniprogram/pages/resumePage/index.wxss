/* pages/resumePage/index.wxss */
page {
  margin: 0;
  padding: 27rpx;
  background-color: #f3fcfa;
}
.board1 {
  width: 88%;
  padding: 30rpx 20rpx;
  height: auto;
  box-shadow: 14rpx 12rpx 24rpx -6rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.icon-view {
  padding: 20rpx 0rpx;
  display: flex;
  flex-direction: row;
}
.avatar image {
  height: 80rpx;
  width: 80rpx;
}
.avatar {
  display: flex;
  flex-direction: row;
  gap: 30rpx;
  padding: 20rpx;
}
.user-tip {
  display: flex;
  flex-direction: row;
}
.user-tip > h2 {
  margin-right: 28rpx;
  font-weight: bold;
}
.user-msg {
  color: #848484;
  font-size: 18rpx;
  margin-top: 15rpx;
}
.user-msg image {
  height: 15rpx;
  width: 17rpx;
}
.tag-view {
  display: flex;
  flex-direction: row;
  gap: 10rpx;
}
.container {
  box-sizing: border-box;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.ul-list li::marker {
  color: #6873e3;
}
ul li {
  margin-bottom: 15rpx;
  font-size: 20rpx;
  color: #232323;
}
.mark {
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.ul-list {
  display: flex;
  flex-wrap: wrap;
  width: 600rpx;
}
.ul-list li {
  width: 50%;
}

ul li > span:first-child {
  color: #7d7d7d;
  font-size: 19rpx;
}

ul {
  padding: 10rpx;
}
.container view view > span:first-child {
  font-weight: bold;
  font-size: 19rpx;
  margin-top: 20rpx;
  margin-left: -10rpx;
}
.container view view > span:nth-child(2) {
  color: #626262;
  float: right;
  font-size: 13rpx;
}
.container > view > span {
  font-size: 25rpx;
  background: linear-gradient(to right, #6873e3, rgb(39, 49, 158));
  -webkit-background-clip: text;
  font-weight: bold;
  color: transparent;
  margin-left: -15rpx;
  margin-bottom: 15rpx;
  display: block;
}

ul:not(.ul-list) {
  list-style: none;
  margin-left: -20rpx;
}
ul:not(.ul-list) li {
  display: block;
}
.light-contain ul li::marker {
  color: #fbe78e;
}

.labels image {
  height: 25rpx;
  width: 25rpx;
}
.predict-contain ul li::marker {
  color: #68a2fd;
}
.labels span {
  font-size: 23rpx;
  color: #333;
}
.labels {
  display: flex;
  flex-direction: row;
  gap: 10rpx;
  margin-bottom: 10rpx;
  margin-left: -15rpx;
}
.predict-contain ul li::marker {
  color: #68a2fd;
}
.warn-contain ul li::marker {
  color: #ffa625;
}
.point {
  border-radius: 50%;
  height: 10rpx;
  width: 10rpx;
}
.predict-contain ul li,
.warn-contain ul li,
.light-contain ul li {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 15rpx;
}
.tags view > span {
  color: #333;
  font-size: rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.tags view view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 20rpx;
}

