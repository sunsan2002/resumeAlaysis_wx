  .input-view{
	  display: flex;
	  flex-direction: row;
	  gap: 30rpx;
	  padding: 40rpx;
	  align-items: center;
	  justify-content: space-evenly;
  }
  .input-view>input{
	  padding: 10rpx;
	border-radius: 30rpx;
	width: 200rpx;
	background-color: #F5F7FB;
	text-align: center;
	color: rgb(90, 90, 90);
	font-size: 22rpx;
  }
  .searchTerm {
	width: 100%;
	border: 5rpx solid #b7bbec;
	border-right: none;
	padding: 0rpx;
	height: 70rpx;
	box-sizing: border-box;
	border-radius: 10rpx 0 0 10rpx;
	outline: none;
	color: #9dbfaf;
	font-size: 20rpx;
	text-indent: 10rpx;
  }
  .line{
	  background-color: rgb(221, 221, 221);
	  border: 0;
	  height: 4rpx;
	  width: 50rpx;
  }
  .searchTerm:focus {
	color: rgb(141, 148, 235);
  }

 


  
  .searchButton {
	width: 110rpx;
	height: 70rpx;
	border: 1rpx solid #b7bbec;
	background: #b7bbec;
	text-align: center;
	color: #fff;
	border-radius: 0 5rpx 5rpx 0;
	cursor: pointer;
	padding: 0px;
  }

  .searchButton:hover {
	background: #8991ec;
  }
  .searchButton>image{
	  height: 35rpx;
	  width: 35rpx;
	  margin-left: -10rpx;
	  margin-top: -10=5rpx;
  }
  
.so_condition {
	width: 96%;
	margin-left: 2%;
	height: auto;
	margin: 0 auto;
	margin-bottom: 20rpx;
	border: 1rpx #eeeeee solid;
	padding-top: 0rpx;
	padding: 7rpx;
	padding-bottom: 20rpx;
	background-color: #fff;
  }
  .so_condition .lefttit {
	width: 90rpx;
	font-size: 23rpx;
	font-weight: 900;
	padding-right: 15rpx;
	float: left;
	text-align: right;
	padding-top: 8rpx;
	margin-top: 15rpx;
  }
  
  .so_condition .rs {
	width: 100%;
	margin-top: 8rpx;
	float: left;
  }
  
  .so_condition .rs .li {
	cursor: pointer;
	padding-left: 10rpx;
	padding-right: 10rpx;
	height: 22rpx;
	line-height: 26rpx;
	float: left;
	border: 1rpx #ffffff solid;
	background-color: #ffffff;
	border-radius: 3rpx;
	font-size: 20rpx;
	margin-top: 5rpx;
  }
  .so_condition .rs .li:hover {
	color: #a75b5b;
	border: 1rpx #a75b5b solid;
	background-color: #d6cdcd;
  }
  .clear {
	clear: both;
	height: 0rpx;
	font-size: 0rpx;
	line-height: 0rpx;
  }
  
  .so_condition .rs .bli {
	height: 30rpx;
	line-height: 30rpx;
	margin-right: 25rpx;
	float: left;
	cursor: pointer;
	margin-top: 3rpx;
  }
  .so_condition .rs .li.select {
	  border: 1rpx #FF6600 solid;
	  background-color: #FFF7EE;
	  color: #FF6600;
  }
