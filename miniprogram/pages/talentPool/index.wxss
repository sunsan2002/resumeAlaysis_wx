page{
	background-color: rgb(242, 247, 252);
	padding: 0;
	padding-bottom: 200rpx;
	margin: 0;
  }
  .board1 {
	background-color: #fff;
	display: flex;
	flex-direction: row;
	width: auto;
	height: auto;
	padding: 20rpx;
	justify-content: flex-start;
  }

  .board1 button{
	  font-size: 27rpx;
	  margin: 0;
	  color: rgb(163, 0, 0);
  }
  .input-class {
	 border-radius: 10rpx;
  }
  .field-class{
	  width: 80%;
	  text-align: left;
	  padding: 0px;
    padding: var(--search-padding,10px 12px);

  }

  .field-class .van-search__input {
	padding: 0;
  }
  
  .field-class .van-search__input-wrapper {
	padding: 0;
  }
  
  .field-class.input-class{
	  text-align: left;
	  border-radius: 30rpx;
  }

  .pop{
	  padding: 40rpx 20rpx;
  }

  .contain>h1{
	  font-weight: bold;
		color: #333;
  }

  .button-view{
	  display: flex;
	  flex-direction: row;
	  justify-content: space-around;
	  margin-top: 50rpx;
  }
  .button1{
	  background-color: #07C160;
	  color: #fff;
	  border-radius: 30rpx;
	  font-size: 25rpx;
	  height: 60rpx;
	  width: 250rpx;
  }
  .button2{
	  border: 1px solid rgb(192, 192, 192);
	  color: #333;
	  border-radius: 30rpx;
	  font-size: 25rpx;
	  height: 60rpx;
	  width: 250rpx;
  }
  .main{
	  margin-top: 30rpx;
	  margin-bottom: 200rpx;
  }
  .button-contain{
	  display: flex;
	  flex-direction: row;
	  flex-wrap: wrap;
	  float: left ;
	  gap: 10rpx;
	  font-size: 22rpx;
	  gap: 20rpx;
	  padding: 20rpx;
  }
  .button-contain checkbox{
	  width: 200rpx;
	  margin-top: 10rpx;
  }
  .labels{
	  background-color: #E5F5FF;
	  color: #2481bb;
	  height: 25rpx;
	  width: auto;
	  font-size: 18rpx;
  }
.noselected{
	float: left;
	width: 200rpx;
