	width: 750rpx;
	height: 380rpx;
}
.box{
	margin: 0;
	padding: 0;
}
.text1{
	font-weight: bold;
	font-size: 40rpx;
	position: absolute;
	left: 60rpx;
	top: 100rpx;
}
.text2{
	position: absolute;
	left: 60rpx;
